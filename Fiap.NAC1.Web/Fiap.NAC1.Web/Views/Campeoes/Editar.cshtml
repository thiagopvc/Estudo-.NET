@model Campeoes

<h1>Editar</h1>

<form asp-action="editar" asp-controller="campeoes">
    <input asp-for="Codigo"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DataLancamento"></label>
        <input asp-for="DataLancamento" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Rotas"></label>
        <select asp-for="Rotas"
                asp-items="@Html.GetEnumSelectList<Rota>()"> 
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control"/>
    </div>
    <div class="form-group">
        <input asp-for="Rework"/>
        <label asp-for="Rework"></label>
    </div>
    <input type="submit" value="Editar" class="btn btn-primary"/>
</form> 

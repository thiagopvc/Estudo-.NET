@model Campeoes

<h1>Cadastrar</h1>

<a asp-action="index">Lista de Campeoes</a>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>

}

<form asp-action="cadastrar" asp-controller="campeoes">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DataLancamento"></label>
        <input asp-for="DataLancamento" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Rotas"></label>
        <select asp-for="Rotas"
                asp-items="@Html.GetEnumSelectList<Rota>()" class="form-control">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control"/>
    </div>
    <div class="form-group">
        <input asp-for="Rework"/>
        <label asp-for="Rework"></label>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-outline-primary"/>
</form>